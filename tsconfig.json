{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@stores": ["./app/stores/index.ts"],
      "@components": ["./app/components/index.ts"]
    }
  },
  "include": ["app/**/*", "schemas/**/*", "templates/**/*"],
  "exclude": ["node_modules"]
}
